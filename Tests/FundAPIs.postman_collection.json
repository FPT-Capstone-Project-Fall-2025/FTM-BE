              ],
              "path": [
                "FTFundDonation",
                "{{donationId}}"
              ]
            }
          }
        },
        {
          "name": "Confirm Donation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Đã xác nhận tiền mặt\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/donations/{{donationId}}/confirm",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "{{donationId}}",
                "confirm"
              ]
            }
          }
        },
        {
          "name": "Reject Donation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Hình ảnh chứng minh không rõ ràng\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/donations/{{donationId}}/reject",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "{{donationId}}",
                "reject"
              ]
            }
          }
        },
        {
          "name": "Update Donation",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 600000,\n  \"donorName\": \"Nguyễn Văn A (Updated)\",\n  \"paymentNotes\": \"Cập nhật số tiền\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/donations/{{donationId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "{{donationId}}"
              ]
            }
          }
        },
        {
          "name": "Delete Donation",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/donations/{{donationId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "{{donationId}}"
              ]
            }
          }
        },
        {
          "name": "Get Donation Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/donations/fund/{{fundId}}/statistics",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "fund",
                "{{fundId}}",
                "statistics"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "3. Expense Management",
      "item": [
        {
          "name": "Get Expenses by Fund",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/fund-expenses/fund/{{fundId}}?page=1&pageSize=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundExpense",
                "fund",
                "{{fundId}}"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Pending Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/fund-expenses/pending?page=1&pageSize=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundExpense",
                "pending"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Expense by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
