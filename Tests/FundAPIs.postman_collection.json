            ],
            "url": {
              "raw": "{{baseUrl}}/donations/fund/{{fundId}}?page=1&pageSize=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundDonation",
                "fund",
                "{{fundId}}"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Pending Donations",
