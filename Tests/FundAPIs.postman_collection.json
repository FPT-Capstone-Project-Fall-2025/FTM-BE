                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 2500000,\n  \"description\": \"Mua đồ trang trí Tết (Updated)\",\n  \"event\": \"Tết Nguyên Đán 2025\"\n}"
