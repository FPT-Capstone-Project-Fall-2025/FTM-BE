{
  "info": {
    "name": "Fund Management API - Refactored",
    "description": "Complete API collection for testing refactored Fund, Donation, and Expense controllers. Remember to set X-Ftid header!",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:7777/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "treeId",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    },
    {
      "key": "fundId",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    },
    {
      "key": "donationId",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    },
    {
      "key": "expenseId",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Fund CRUD",
      "item": [
        {
          "name": "Get Funds by Tree",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/funds/tree/{{treeId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "funds",
                "tree",
                "{{treeId}}"
              ]
            }
          }
        },
        {
          "name": "Create Fund",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"familyTreeId\": \"{{treeId}}\",\n  \"fundName\": \"Quỹ Tết Nguyên Đán 2025\",\n  \"description\": \"Quỹ tổ chức Tết cho gia đình\",\n  \"bankAccountNumber\": \"1234567890\",\n  \"bankCode\": \"970436\",\n  \"bankName\": \"Vietcombank\",\n  \"accountHolderName\": \"NGUYEN VAN A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/funds",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "funds"
              ]
            }
          }
        },
        {
          "name": "Update Fund",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fundName\": \"Quỹ Tết Nguyên Đán 2025 (Updated)\",\n  \"description\": \"Quỹ tổ chức Tết - Cập nhật\",\n  \"bankAccountNumber\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/funds/{{fundId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "funds",
                "{{fundId}}"
              ]
            }
          }
        },
        {
          "name": "Donate - Cash",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memberId\": \"{{userId}}\",\n  \"donorName\": \"Nguyễn Văn A\",\n  \"amount\": 500000,\n  \"paymentMethod\": 0,\n  \"paymentNotes\": \"Ủng hộ quỹ Tết\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/funds/{{fundId}}/donate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "funds",
                "{{fundId}}",
                "donate"
              ]
            }
          }
        },
        {
          "name": "Donate - Bank Transfer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memberId\": \"{{userId}}\",\n  \"donorName\": \"Trần Thị B\",\n  \"amount\": 1000000,\n  \"paymentMethod\": 1,\n  \"paymentNotes\": \"Chuyển khoản ủng hộ\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/funds/{{fundId}}/donate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "funds",
                "{{fundId}}",
                "donate"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "2. Donation Management",
      "item": [
        {
          "name": "Get Donations by Fund",
