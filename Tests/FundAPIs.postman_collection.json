              }
            ],
            "url": {
              "raw": "{{baseUrl}}/fund-expenses/{{expenseId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundExpense",
                "{{expenseId}}"
              ]
            }
          }
        },
        {
          "name": "Approve Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Ftid",
                "value": "{{treeId}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "notes",
                  "value": "Đã duyệt và thanh toán",
                  "type": "text"
                },
                {
                  "key": "paymentProof",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/fund-expenses/{{expenseId}}/approve",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "FTFundExpense",
                "{{expenseId}}",
                "approve"
